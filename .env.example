# Vanguard Anti-Counterfeiting System
# Environment Configuration Example
# Copy this file to .env and update with your values

# Application
NODE_ENV=production
PORT=3000
APP_NAME=Vanguard Anti-Counterfeiting System

# Domain Configuration
DOMAIN_NAME=your-domain.com
SSL_EMAIL=admin@your-domain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vanguard_production
DB_USER=vanguard
DB_PASSWORD=your_secure_database_password
DATABASE_URL=postgresql://vanguard:your_secure_database_password@localhost:5432/vanguard_production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@localhost:6379

# Security
JWT_SECRET=your_very_long_random_jwt_secret_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# File Uploads
UPLOAD_DIR=/opt/vanguard/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AI/ML Configuration
TENSORFLOW_BACKEND=cpu
ML_MODEL_PATH=/opt/vanguard/server/services/ml/models
ML_CONFIDENCE_THRESHOLD=0.85
ANOMALY_DETECTION_SENSITIVITY=0.7

# Blockchain Configuration
BLOCKCHAIN_NETWORK=polygon
BLOCKCHAIN_RPC_URL=https://polygon-rpc.com
CONTRACT_ADDRESS=
PRIVATE_KEY=
GAS_LIMIT=3000000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@vanguard-auth.com
EMAIL_REPLY_TO=support@vanguard-auth.com

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=vanguard-uploads
AWS_S3_BACKUP_BUCKET=vanguard-backups

# Google Maps API (for heat maps)
GOOGLE_MAPS_API_KEY=

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_ML_FEATURES=true
ENABLE_GAMIFICATION=true
ENABLE_AI_CHAT=true
ENABLE_HEAT_MAPS=true

# Test Data Generation
GENERATE_TEST_DATA=false

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_S3_RETENTION_DAYS=30

# Notification Webhooks (Optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# API Keys for External Services
OPENAI_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Performance Tuning
MAX_POOL_SIZE=20
WEB_CONCURRENCY=4
WORKER_CONCURRENCY=2

# Development/Debug (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false