# Verifi System Environment Configuration

# Application Settings
NODE_ENV=production
APP_NAME=Verifi Anti-Counterfeiting System
APP_VERSION=1.0.0

# Server Configuration
SERVER_PORT=55222
CLIENT_PORT=52690
API_BASE_URL=http://localhost:55222

# Database Configuration
DATABASE_URL=postgresql://verifi_user:verifi_pass@localhost:5432/verifi_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=verifi_db
DB_USER=verifi_user
DB_PASSWORD=verifi_pass

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
VERIFI_API_KEY=verifi-demo-key-2024
ENCRYPTION_KEY=your-32-character-encryption-key

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_NETWORK_ID=1337
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key

# AI/ML Configuration
AI_SERVICE_URL=http://localhost:5000
OPENAI_API_KEY=your-openai-api-key
ML_MODEL_PATH=./models

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# SMS Service (for notifications)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-service.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/verifi.log

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_AI_INSIGHTS=true
ENABLE_REWARDS_PROGRAM=true
ENABLE_RESPONSIBLE_DRINKING=true

# South African Specific Settings
DEFAULT_TIMEZONE=Africa/Johannesburg
DEFAULT_CURRENCY=ZAR
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,af,zu,xh

# Legal & Compliance
GDPR_ENABLED=true
POPIA_ENABLED=true
DATA_RETENTION_DAYS=365

# Performance Settings
CACHE_TTL=3600
SESSION_TIMEOUT=1800
MAX_CONCURRENT_REQUESTS=1000

# Development Settings (remove in production)
DEBUG_MODE=false
MOCK_BLOCKCHAIN=false
MOCK_AI_SERVICES=false
ENABLE_CORS=true